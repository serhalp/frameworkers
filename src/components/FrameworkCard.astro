---
import FrameworkContributor from "./FrameworkContributor.astro";

interface Contributor {
  login: string;
  url: string;
  avatarUrl: string;
  contributions: number;
  contributorScore: number;
}

interface Props {
  repoUrl: string;
  repoSlug: string;
  contributors: Contributor[];
}

const { repoUrl, repoSlug, contributors } = Astro.props;
---

<article class="card">
  <header class="card-header">
    <a class="repo-link" href={repoUrl}>
      <h2 class="repo-title">
        <span class="repo-slug">{repoSlug}</span>
        <span class="repo-arrow" aria-hidden="true">&rarr;</span>
      </h2>
    </a>
  </header>
  <ul class="contributors" role="list">
    {
      contributors.map((contributor) => (
        <li class="contributor">
          <FrameworkContributor {...contributor} />
        </li>
      ))
    }
  </ul>
</article>
<style>
  .card {
    display: flex;
    flex-direction: column;
    border-radius: var(--radius-lg);
    background: var(--surface);
    border: 1px solid var(--border);
    box-shadow: var(--shadow-md);
    overflow: hidden;
    transition:
      transform 180ms ease,
      border-color 180ms ease,
      background-color 180ms ease;
  }

  .card-header {
    padding: 1.1rem 1.1rem 0.65rem;
    background: linear-gradient(
      180deg,
      rgba(255, 255, 255, 0.06),
      rgba(255, 255, 255, 0)
    );
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
  }

  .repo-link {
    display: block;
    text-decoration: none;
    color: var(--text);
  }

  .repo-title {
    margin: 0;
    font-size: 1.05rem;
    line-height: 1.35;
    letter-spacing: -0.01em;
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 0.75rem;
  }

  .repo-slug {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .repo-arrow {
    color: var(--muted-2);
    flex: 0 0 auto;
  }

  .contributors {
    margin: 0;
    padding: 0.85rem 1.1rem 1.1rem;
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  .contributor {
    list-style: none;
  }

  .card:is(:hover, :focus-within) {
    transform: translateY(-2px);
    border-color: rgba(var(--accent-2), 0.35);
    background: var(--surface-2);
  }

  .card:is(:hover, :focus-within) .repo-arrow {
    color: rgba(var(--accent-2), 0.85);
  }

  @media (prefers-reduced-motion: reduce) {
    .card {
      transition: none;
    }
  }
</style>
